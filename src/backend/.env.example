# 应用配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# API配置
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
ALLOWED_HOSTS=["*"]

# 数据库配置
POSTGRES_URL=postgresql+asyncpg://postgres:root@localhost:5432/mydb
POSTGRES_TEST_URL=postgresql+asyncpg://postgres:root@localhost:5432/mydb_test

# MongoDB配置  
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=tradeflow
MONGODB_TEST_DATABASE=tradeflow_test

# Redis配置
REDIS_URL=redis://:root@localhost:6379/0
REDIS_TEST_URL=redis://:root@localhost:6379/1

# MinIO配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=root
MINIO_SECRET_KEY=rootpassword
MINIO_SECURE=false
MINIO_BUCKET_NAME=tradeflow-storage

# JWT配置
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# 外部服务配置
GOOGLE_ADK_API_KEY=your-google-adk-api-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# 监控配置
SENTRY_DSN=your-sentry-dsn
ENABLE_METRICS=true
METRICS_PORT=8001